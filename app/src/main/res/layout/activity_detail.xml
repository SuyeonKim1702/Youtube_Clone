<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto">

                <com.google.android.exoplayer2.ui.PlayerView
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/exo_detail_exoplayer"
                    android:layout_width="match_parent"
                    android:layout_height="203dp"
                    app:controller_layout_id="@layout/custom_playback_control"
                    app:use_controller="true" />


        <ProgressBar
            android:id="@+id/pb_detail_progress"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:progressTint="@color/colorPrimary"
            android:progressBackgroundTint="#80535351"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            app:layout_constraintBottom_toBottomOf="@id/exo_detail_exoplayer" />
    <FrameLayout
        android:id="@+id/frame_detail_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/pb_detail_progress"
        app:layout_constraintBottom_toBottomOf="parent"></FrameLayout>
    






</androidx.constraintlayout.widget.ConstraintLayout>